<h1>Users</h1>

<%= form_tag(users_path, method: :patch) do %>
  <table>
    <thead>
    <tr>
      <th>email</th>
      <th>is_administrator</th>
      <th colspan="1"></th>
    </tr>
    </thead>

    <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= check_box_tag 'admins[]', user.email, user.is_administrator %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
  <%= submit_tag %>
<% end %>