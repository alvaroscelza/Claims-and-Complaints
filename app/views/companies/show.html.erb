<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>

<p>
  <strong>Reputation:</strong>
  <%= @company.reputation %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @company.image_url %>
</p>

<p>
  <strong>Business:</strong>
  <%= @company.business.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @company.description %>
</p>

<% if current_user.try(:is_administrator) %>
  <%= link_to 'Edit', edit_company_path(@company) %> |
<% end %>
<%= link_to 'Back', companies_path %>

<br>
<br>

<% unless @company.judgements.empty? %>
  <h3>Judgements</h3>
  <%= render 'judgements/index', company: @company %>
<% end %>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Judgement', new_company_judgement_path(@company) %>
<% end %>